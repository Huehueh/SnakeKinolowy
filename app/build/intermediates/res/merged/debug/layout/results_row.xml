<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/snakeName"
            android:text="1"
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/snakePoints"
            android:text="2"
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/snakeName"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/snakeDeaths"
            android:text="3"
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/snakePoints"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/snakeHits"
            android:text="4"
            android:layout_width="@dimen/column_width"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/snakeDeaths"
            android:gravity="center_horizontal"/>

    </RelativeLayout>
    <View
        android:background="#555"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>